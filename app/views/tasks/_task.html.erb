<div class="w-full my-2" id=<%= dom_id task %>>
  <div class="flex items-center">
    <h1 class="break-words w-2/3"><%= task.title %></h1>
    <% unless task.section.to_do_list.is_template || user.blank? %>
      <% if user_policy %>
        <div class="flex gap-1">
          <%= link_to edit_to_do_list_section_task_path(task.section.to_do_list, task.section, task), class: "flex justify-center gap-1 items-center group text-blue-500", data: { turbo_frame: "modal" } do %>
            <span><%= heroicon "pencil-square", variant: :outline, options: { class: "h-5 w-6" } %></span>
          <% end %>
          <%= link_to to_do_list_section_task_path(task, section_id: task.section.id, to_do_list_id: task.section.to_do_list.id), data: { turbo_method: :delete }, class: "flex justify-center gap-1 items-center group text-red-500" do  %>
            <span><%= heroicon "trash", variant: :outline, options: { class: "h-5 w-6" } %></span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <h1 class="break-words w-full text-sm text-gray-500"><%= task.description %></h1>
</div>